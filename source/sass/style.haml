//////////////////////////Background fix

.bgimg
	background-size: cover
	background-repeat: no-repeat
	background-position: center


//////////////////////////Color inversion
.inverted
	color: $color-inverted
	path, polygon
		fill: #fff


//////////////////////////Typography

#menu
	position: fixed
	width: 100%
	z-index: 999
	text-align: center
	padding: 0
	margin: 0
	top: 70px
	
	li
		display: inline-block
		margin: 0 5px
		border-radius: 5px
		background: rgba(255,255,255,.5)

		a
			display: block
			padding: 5px 15px
			color: #000
			text-transform: uppercase
			text-decoration: none

		&.active
			background: rgba(0,0,0,.15)
			a
				color: $color-inverted

//////////////////////////Sections

.section
	text-align: center

	.reasons-headline
		//font-size: 1.4em
		font-weight: 100
		position: absolute
		top: 130px
		left: 50%
		margin-top: 0
		margin-bottom: 0
		margin-left: -250px
		display: block
		width: 500px
		z-index: 1000
	
.tour
	background-image: url('../images/section1-lg-background.jpg')

	h2
		font-size: 10rem
		font-weight: 100

	.scrolldown-icon
		position: absolute
		left: 50%
		bottom: 15px
		margin-left: -15px

